{
  "name": "pocket-lisp-stdlib",
  "version": "0.7.0",
  "author": {
    "name": "Laszlo Vadasz"
  },
  "license": "MIT",
  "description": "Standard lib for Pocket Lisp",
  "keywords": [
    "interpreter",
    "lisp",
    "stdlib"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "pocket-lisp": "latest"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "@wessberg/rollup-plugin-ts": "^1.2.28",
    "chai": "^4.2.0",
    "codecov": "^3.7.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "mocha": "8.0.1",
    "npm-dts": "^1.3.1",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "rollup": "2.23.0",
    "source-map-support": "0.5.19",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix --max-warnings=0 --ignore-pattern \"src/**/*.d.ts\"",
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "repl": "ts-node -r tsconfig-paths/register src/repl.ts",
    "start": "npm run repl",
    "::pre-publish": "npm run lint && npm run test && npm run build",
    "::publish": "npm publish --access=public",
    "publish-patch": "npm run ::pre-publish && npm version patch && npm run ::publish",
    "publish-minor": "npm run ::pre-publish && npm version minor && npm run ::publish",
    "publish-major": "npm run ::pre-publish && npm version major && npm run ::publish"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map",
      "**/*.spec.ts",
      "test/**/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && mocha"
    }
  }
}
